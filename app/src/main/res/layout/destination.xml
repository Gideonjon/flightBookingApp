<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@color/bg"
    android:layout_marginHorizontal="22dp"
    android:layout_height="wrap_content">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/countryImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/istanbul"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="7dp" />

    <TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:fontFamily="@font/sfmedium"
        android:text="Стамбул"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/countryImage"
        app:layout_constraintTop_toTopOf="@+id/countryImage"
        android:layout_marginLeft="12dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Популярное направление"
        android:textSize="14sp"
        android:textColor="#5E5F61"
        app:layout_constraintStart_toStartOf="@+id/countryName"
        app:layout_constraintTop_toBottomOf="@+id/countryName" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/countryImage"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/vector"/>



</androidx.constraintlayout.widget.ConstraintLayout>